<Window x:Class="POS.MainPOS.Views.CustomColorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
         Height="300" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <xctk:ColorCanvas x:Name="colorCanvas"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button IsDefault="True" x:Name="btnSelect" Content="בחר" Width="50" Margin="5" Click="btnSelect_Click"/>
                <Button IsCancel="True" x:Name="btnCancel" Content="בטל" Width="50" Margin="5" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
