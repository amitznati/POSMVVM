<UserControl x:Class="POS_WPF.Views.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:POS_WPF.Views"
             xmlns:vm="clr-namespace:POS_WPF.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:CustomerViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <views:PersonView DataContext="{Binding Entity}"/>
    </Grid>
</UserControl>
