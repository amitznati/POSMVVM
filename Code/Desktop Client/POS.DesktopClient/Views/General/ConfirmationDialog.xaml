<control:MetroWindow x:Class="POS.DesktopClient.Views.General.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="http://metro.mahapps.com/winfx/xaml/controls"
        Title="ConfirmationDialog" Height="300" Width="300" Style="{DynamicResource MetroDialogStyle}" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Message}" FontSize="30"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Click="Button_Click" Style="{DynamicResource MyTileStyle}" Content="אישור" HorizontalAlignment="Center" Width="100"/>
                <Button IsCancel="True" Style="{DynamicResource MyTileStyle}" Content="ביטול" HorizontalAlignment="Center" Background="#CCDA2411" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</control:MetroWindow>
